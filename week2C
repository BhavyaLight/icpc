#include<stdio.h>
#include<math.h>

int main()
{
    int n, m, sp[100000][2], i, j, count = 0, a, b, p[100000][2], k, l=0, ans[50], c[100000][2], flag; 
    scanf("%d %d", &n, &m);
    while(m || n)
    {
        /*if(m == 0)
        {
            i = 1;
            for(j=0; j<n; j++)
            {
               i = i%1000000007;
               i *= 2;
            }
            printf("%d", i);
            break;
        }*/ 
        for(i=0; i<m; i++)
            scanf("%d %d", &sp[i][0], &sp[i][1]); 
        for(i=0; i<n; i++)
          for(j=i+1; j<n; j++)
           {
            p[count][0] = i+1;
            p[count][1] = j+1;
            count++;
           }
        //for(i = 0; i<count; i++)
        //    printf("%d %d\n", p[i][0], p[i][1]);
        count = 0;
        for(i = 0; i<n*(n-1)/2; i++)
        {
            a = p[i][0];
            b = p[i][1];
            for(j=a; j<b; j++)
            {      
                for(k=0; k<m; k++)
                { 
                   if((j==sp[k][0]&&(j+1)==sp[k][1])||((j+1)==sp[k][0]&&j==sp[k][1]))
                   {
                       flag = 1;
                       break;
                   }
               
                   else   
                       flag = 0;       
                }   
            }
            if(flag)
                {
                    c[count][0] = a;
                    c[count][1] = b;
                    count++;
                }
        }
        i = 1;
        for(j=0; j<n; j++)
        {
            i = i%1000000007;
            i *= 2;
        }
        if(m==0)
            ans[l] = i;
        else 
            ans[l] = (i - (2*count)%1000000007 + 1)%1000000007;
        l++;
        scanf("%d %d", &n, &m);
    }
    for(i = 0; i<l; i++)
        printf("%d\n", ans[i]);
}
